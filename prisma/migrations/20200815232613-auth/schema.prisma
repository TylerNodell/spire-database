// 1
datasource db {
  provider = "sqlite"
  url = "***"
}

// 2
generator client {
  provider = "prisma-client-js"
  experimentalFeatures = ["connectOrCreate"]
}

model Building {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String?
  address   String
  units     Unit[]
}

model Unit {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  apt        String
  sale       Boolean
  building   Building @relation(fields: [buildingId], references: [id])
  buildingId Int
  owner      Owner    @relation(fields: [ownerId], references: [id])
  ownerId    Int
  tenant     Tenant  @relation(fields: [tenantId], references: [id])
  tenantId   Int
  agent      Agent    @relation(fields: [agentId], references: [id])
  agentId    Int
}

model Owner {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  phone     String?  @unique
  email     String?  @unique
  units     Unit[]
}

model Tenant {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  phone     String?  @unique
  email     String?  @unique
  unit      Unit
}

model Agent {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  phone     String   @unique
  email     String   @unique
  password  String
  units     Unit[]
}
